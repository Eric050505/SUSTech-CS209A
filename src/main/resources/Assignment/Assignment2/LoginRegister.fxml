<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="325.0" prefWidth="220.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Assignment.Assignment2.Controller.LoginRegisterController">

    <Label fx:id="messageLabel" alignment="CENTER" prefHeight="35.0" prefWidth="220.0">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>

    <Label text="Username: ">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="usernameField" prefHeight="23.0" prefWidth="168.0" />

    <Label text="Password: ">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <PasswordField fx:id="passwordField" />

    <Button fx:id="actionButton1" onAction="#handleAction" text="Login" />

    <Button fx:id="actionButton2" onAction="#toggleRegister" text="Click here to Register" />

</VBox>
